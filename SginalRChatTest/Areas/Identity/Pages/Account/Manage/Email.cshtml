@page
@model EmailModel
@{
    ViewData["Title"] = "Change Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

@section Styles{
    <link rel="stylesheet" href="~/css/login.css" />
}


<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center" style="font-size: 2rem; line-height: 0.8"><br />@ViewData["Title"]</h5>
                    <hr/>
                    <partial name="_StatusMessage" for="StatusMessage"/>
                    <section>
                        <form class="form-signin" id="email-form" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-label-group">
                                <label asp-for="Email"></label>
                                @if (Model.IsEmailConfirmed)
                                {
                                    <div class="form-label-group">
                                        <input type="email" asp-for="Email" class="form-control" placeholder="Current email" disabled/>
                                        <label asp-for="Email">Current email</label>
                                    </div>
                                }
                                else
                                {
                                    <div class="form-label-group">
                                        <input asp-for="Email" class="form-control" placeholder="Email address" disabled/>
                                        <label asp-for="Email">Email address</label>
                                        <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-lg btn-primary btn-block text-uppercase button-signin">Send verification email</button>
                                    </div>
                                }
                            </div>
                            <div class="form-label-group">
                                <input type="email" asp-for="Input.NewEmail" class="form-control" placeholder="New email" required autofocus/>
                                <label asp-for="Input.NewEmail"></label>
                                <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                            </div>
                            <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-lg btn-primary btn-block text-uppercase button-signin">Change email</button>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
